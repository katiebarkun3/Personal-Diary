      <br />
      <p><a href="/today">Today</a></p>
      <p><a href="/index">All posts</a></p>
    </div>
    <div class="settings-main">
      <h1>Profile settings</h1>
      <hr />
      <div class="settings-full-info">
        <div class="settings-info">
          <div class="settings-name">
            <h2>Your name</h2>
            <input type="text" value="{{user.username}}" readonly />
          </div>
        </div>
        <div class="settings-email">
          <hr />
          <h2>Email</h2>
          <div class="inner-settings-email">
            <div class="inner-settings-email-first">
              <input
                type="text"
                class="input-inner-settings-email"
                value="{{user.email}}"
                readonly
              />
            </div>
            <div class="inner-settings-email-last">
              <input
                type="checkbox"
                class="form-check-input"
                id="settings-verify-email"
                checked
                readonly
              />
              <label for="settings-verify-email">Verified</label>
            </div>
          </div>
          <hr />
        </div>
        <div class="changeuser">
          <a href="/logout">Log out</a>
        </div>
      </div>
    </div>
  </body>

</html>